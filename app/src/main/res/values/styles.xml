<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="MainActivityButtons">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#f5f6fa</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="BookingTour">
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textColor">#0097e6</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BookingTour_ET">
        <item name="android:textColor">#718093</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10sp</item>
        <item name="android:layout_marginRight">10sp</item>
        <item name="android:fontFamily">@font/quicksand</item>
    </style>

    <style name="ItemCardView" parent="CardView">
        <item name="cardElevation">2dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="about_us_btns">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#f5f6fa</item>
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:background">@drawable/button_blue_grey</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

</resources>
